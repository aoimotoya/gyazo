<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="robots" content="none" />
    <title>Private gyazo gallery</title>

    <link rel="stylesheet" type="text/css" href="./common/css/main.css" media="all" />
    <!-- <link rel="stylesheet" type="text/css" href="./common/css/transitions.css" media="all" /> -->

    <!--[if lt IE 9]>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <![endif]-->
    <!--[if (gte IE 9) | (!IE)]><!-->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <!--<![endif]-->

    <!--[if IE]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <script src="./common/js/jquery.collagePlus.js"></script>
    <script src="./common/js/jquery.removeWhitespace.min.js"></script>
    <script src="./common/js/jquery.collageCaption.min.js"></script>
  
    <script type="text/javascript">
    // All images need to be loaded for this plugin to work so
    // we end up waiting for the whole window to load in this example
    $(window).load(function () {
        $(document).ready(function(){
            collage();
            $('.Collage').collageCaption();
        });
    });
    // Here we apply the actual CollagePlus plugin
    function collage() {
        $('.Collage').removeWhitespace().collagePlus(
            {
                'fadeSpeed'     : 2000,
                'targetHeight'  : 200
            }
        );
    };
    // This is just for the case that the browser window is resized
    var resizeTimer = null;
    $(window).bind('resize', function() {
        // hide all the images until we resize them
        $('.Collage .Image_Wrapper').css("opacity", 0);
        // set a timer to re-apply the plugin
        if (resizeTimer) clearTimeout(resizeTimer);
        resizeTimer = setTimeout(collage, 200);
    });
    </script>
</head>
<body>
    <header class="header">
        <!-- <a class="return" href="./">Back to top</a> -->
        <h1>Private gyazo gallery</h1>
    </header>
    <section class="Collage effect-paarent">
    <% @file_array.each do |file,time| %>
        <div class="Image_Wrapper" data-caption="<%= time %>"><a href="<%= file %>"><img src="<%= file %>" /></a></div>
    <% end %>
    </section>
</body>
</html>

